<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="entityFramework" type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
  </configSections>
  <connectionStrings>
    <add name="WebContext" connectionString="Data Source=(local); Initial Catalog=Scheduler; Integrated Security=True; MultipleActiveResultSets=True; Connection Timeout=3"
      providerName="System.Data.SqlClient" />
  </connectionStrings>
  <appSettings>
    <add key="Scheduler.CronService.MachineName" value="localhost" />
    <add key="ClientCertificateSubjectName" value="Scheduler Service" />
  </appSettings>
  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="true" />
          <serviceAuthorization principalPermissionMode="UseAspNetRoles" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <bindings>
      <basicHttpsBinding>
        <binding>
          <security mode="Transport">
            <transport clientCredentialType="Certificate" />
          </security>
        </binding>
      </basicHttpsBinding>
    </bindings>
    <services>
      <service name="Scheduler.SchedulerService.Scheduler">
        <endpoint address="cert/Scheduler.svc" binding="basicHttpsBinding" contract="Scheduler.SchedulerService.IScheduler">
          <identity>
            <certificateReference x509FindType="FindBySerialNumber" findValue="e31dae4b70e313bc4d93daa65f7cdabf" isChainIncluded="true" />
          </identity>
        </endpoint>
        <endpoint address="mex" binding="mexHttpsBinding" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="https://localhost:44301/Design_Time_Addresses/Scheduler/" />
          </baseAddresses>
        </host>
      </service>
    </services>
  </system.serviceModel>
</configuration>