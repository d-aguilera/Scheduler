@if (ViewBag.Toast != null)
{
    var type = ViewBag.Toast.Type.ToString().ToLowerInvariant();
    var message = ViewBag.Toast.Message;
    var title = ViewBag.Toast.Title;
    <script type="text/javascript">
    $(function() {
        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };

        toastr["@type"]('@Html.Raw(HttpUtility.JavaScriptStringEncode(message))', '@Html.Raw(HttpUtility.JavaScriptStringEncode(title))');
    });
    </script>
}
