<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <add key="ClientCertificateSubjectName" value="Scheduler Client Machine 1" />
    <add key="SchedulerServiceAddress" value="https://localhost:44301/Design_Time_Addresses/Scheduler/cert/Scheduler.svc" />
  </appSettings>
  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="true" />
          <serviceAuthorization principalPermissionMode="UseAspNetRoles" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <bindings>
      <basicHttpsBinding>
        <binding>
          <security mode="Transport">
            <transport clientCredentialType="Certificate" />
          </security>
        </binding>
      </basicHttpsBinding>
    </bindings>
    <services>
      <service name="Scheduler.AgentService.Agent">
        <endpoint address="cert/Agent.svc" binding="basicHttpsBinding" contract="Scheduler.AgentService.IAgent">
          <identity>
            <certificateReference x509FindType="FindByThumbprint" findValue="8338ba3908675959268de12967cebf76bd728add" isChainIncluded="true" />
          </identity>
        </endpoint>
        <endpoint address="mex" binding="mexHttpsBinding" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="https://localhost:44302/Design_Time_Addresses/Scheduler/" />
          </baseAddresses>
        </host>
      </service>
    </services>
  </system.serviceModel>
</configuration>